<div id="section-cta" class="page-width text-center">
    <div class="section-header text-center">
        <h3>{{ section.settings.text-box }}</h3>
    </div>
    {% for block in section.blocks %}
    <div class="btn btn--cta">
        <a href="{{ block.settings.link }}" class="btn btn--cta">{{ block.settings.linktext }}</a>
    </div>
    {% endfor %}
</div>

{% schema %}
  {
    "name": "CTA Blocks",
    "max_blocks": 6,
    "settings": [
		{
            "id": "text-box",
            "type": "text",
            "label": "Heading",
            "default": "Title"
        }
    ],
    "blocks": [
        {
            "type": "select",
            "name": "select",
            "settings": [
                {
                    "id": "link",
                    "type": "url",
                    "label": "Button link"
                },
                {
                    "id": "linktext",
                    "type": "text",
                    "label": "Button text",
                    "default": "Click here"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "CTA Blocks",
            "category": "CTA Blocks",
			"blocks": [
				{
					"type": "select"
				},
				{
					"type": "select"
				}
			]
        }
    ]
  }
{% endschema %}

